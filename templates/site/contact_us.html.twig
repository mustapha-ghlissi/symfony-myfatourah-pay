{% extends 'base.html.twig' %}

{% block title %}
  AUVT | اتصل بنا 
{% endblock %}

{% block body %}
<div class="container-fluid contact_titer">
    <h1 class="display-2 text-center text-light pt-5">أتصل بنا</h1>
</div>
<div class="container col-lg-8">
{# messages flash #}
{# {% for message in app.flashes('success') %}

        <div class="d-flex justify-content-center mt-2">
            <div class="alert alert-secondary text-center col-4 my-2">
            {{ message }}
            </div>
        </div>

    {% endfor %}
#}
    <h2 class="text-center py-5" id="contact_form">للأستفسارات:</h2>

{# contact form #}
{{ form_start(formContact) }} 
 <div class="d-flex justify-content-center">
    <div class="row col-lg-10 col-12 mt-5">
         <div class="col-lg-6 mt-3">{{ form_row(formContact.last, {label: 'Last name |اسم العائلة', 'attr': {'placeholder': 'الرجاء إدخال اسمك'}}) }}
                        </div>

        <div class="col-lg-6 mt-3">{{ form_row(formContact.first, {label: 'First name | الاسم الأول', 'attr': {'placeholder': 'الرجاء إدخال اسمك الأول'}}) }}
        </div>

        <div class="col-xl-6 mt-3">{{ form_row(formContact.email, {label: 'Email | البريد الإلكتروني', 'attr': {'placeholder': 'الرجاء إدخال بريدك الإلكتروني'}}) }}
        </div>

        <div class="col-lg-6 mt-3">{{ form_row(formContact.phone, {label: 'Phone | رقم الهاتف', 'attr': {'placeholder': 'الرجاء إدخال هاتفك'}}) }}
        </div>

        <div class="col-lg-12 mt-3">{{ form_row(formContact.message, {label: 'Message | رسالة', 'attr': {'placeholder': 'الرجاء إدخال رسالتك'}}) }}
        </div>

        <div class="col-lg-10 my-3">
            <button type="submit" class="btn btn-secondary">Send | ارسل</button>
        </div> 

    </div>
 </div>
{{ form_end(formContact)}}  
</div> 

{% endblock %}