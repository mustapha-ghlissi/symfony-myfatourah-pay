{% extends 'base.html.twig' %}


{% block title %}
  AUVT | عضوية الجمعية 
{% endblock %}

{% block body %}

<div class="container-fluid adhesion_titer">
    <h2 class="display-4 text-center text-light pt-5">عضوية الجمعية | Adhesion association</h2>
</div>

<div class="container text-center mb-5">
    <div class="row">
        <div class="col-12">
            <img src="{{ asset('../uploads/logo_uvta_horisontal.png')}}" width="40%" alt="logo">
        </div>
        <div class="col">
            <div class="table-responsive mt-2 mb-5">
                {% include 'site/_alert.html.twig' %}
                <table class="table table-striped table-bordered mt-3">
                    <tr>
                        <th>التاريخ | Date</th>
                        <th>المبلغ | Amount</th>
                        <th>حالة الدفع | Status</th>
                    </tr>
                    <tr>
                        <td>{{ promise.date|date('Y-m-d H:i') }}</td>
                        <td>{{ promise.amount }} SAR</td>
                        <td>
                            {% if promise.status %}
                                <span class="badge badge-success bg-success text-white p-2">
                                    تم الدفع | Paid
                                </span>
                            {% else %}
                                {{ form_start(formPayment) }}
                                {{ form_widget(formPayment.pay) }}
                                {{ form_rest(formPayment) }}
                                {{ form_end(formPayment) }}
                            {% endif %}
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
